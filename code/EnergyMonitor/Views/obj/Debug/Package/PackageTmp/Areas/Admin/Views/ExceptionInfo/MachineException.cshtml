    <div class="contentbox">
    <div id="tabs">
	    <ul class="tab-ul">  
		    <li class="current"><a >机器故障</a></li>  
		    <li><a href="@Url.Action("DiscontinuousValue", "ExceptionInfo")">断值</a></li>
		    <li><a href="@Url.Action("ValueDecline", "ExceptionInfo")">值突降</a></li>
