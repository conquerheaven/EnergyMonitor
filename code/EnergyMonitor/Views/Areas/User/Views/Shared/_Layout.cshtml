@using EnergyMonitor.Controllers.Utils
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>复旦大学绿色校园能耗监管平台 - @ViewBag.Title</title>
    <link href="../../../../Content/css/layout.css" rel="stylesheet" type="text/css" />
    <!-- Theme Start -->
    <link href="../../../../Content/themes/green/styles.css" rel="stylesheet" type="text/css" />
    <!-- Theme End -->
    <script src="../../../../Scripts/jquery-1.4.4.min.js" type="text/javascript"></script>
    @RenderSection("head",required:false)
</head>

<body id="homepage">
	<div id="header">
       @* <img alt="logo" src="../../../../Content/images/headerbg_left.jpg" class="imgLeft" height="158"/>
        <img alt="logo" src="../../../../Content/images/headerbg_right.jpg" class="imgRight" height="158" />
        <h1>复旦大学节约型校园建筑节能监管平台</h1>*@
        <img  alt="logo" height="250px"  src="@Url.Content("~/Content/images/bg_lt_title.png")"/>
    </div>
        
    <!-- Top Breadcrumb Start -->
    <div id="breadcrumb">
    	<ul>	
        	<li><img src="../../../../Content/images/img/icons/icon_breadcrumb.png" alt="Location" /></li>
        	@Html.Location()
        </ul>
        <div class="language">@Html.Partial("_SelectLanguage")</div>
    </div>
    <!-- Top Breadcrumb End -->
     
    <!-- Right Side/Main Content Start -->
    <div id="rightside">

        @RenderBody()

        <div id="footer">
        	&copy; Copyright 2011 Fudan University All Rights Reserved
        </div> 
          
    </div>
    <!-- Right Side/Main Content End -->
    
    <!-- Left Dark Bar Start -->
    <div id="leftside">
    	<div class="user">
        	<img src="../../../../Content/images/img/avatar.png" width="44" height="44" class="hoverimg" alt="Avatar" />
            <p>当前用户：</p>
            <p class="username">@Session["loginUserName"]</p>
            <p class="userbtn"><a href="@Url.Action("Logout", "Homes", new { area = "" })"></a></p>
        </div>

        <ul id="nav">
            @Html.Nav(0)
        </ul>
    </div>
    <!-- Left Dark Bar End --> 

</body>
</html>
