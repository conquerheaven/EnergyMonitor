                buttons: {
                    '选择': function () {
                        selectedObjs = $("#selectedBuilding option:selected");
                        if (selectedObjs.length == 0) {
                            selectedObjs = $("#selectedSchoolArea option:selected");
                            if (selectedObjs.length == 0) {
                                selectedObjs = $("#selectedSchool option:selected");
                                if (selectedObjs.length > 0) {
                                    $("#objType").val(1);
                                }
