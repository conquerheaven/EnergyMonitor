                if ($.isEmptyObject(data)) {
                    $("#newValErrorTip").html("该时刻已存在值，请重新输入时间").slideDown("fast");
                } else {
                    $("#valMinRange").val(data.min);
                    $("#valMaxRange").val(data.max);
                    if (data.min != "" || data.max != "") {
                        var str = "";
                        if (data.min != "") {
